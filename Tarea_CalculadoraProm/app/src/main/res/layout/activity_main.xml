<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculadora De Calificaciones"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvParcial1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcial 1" />

            <RadioGroup
                android:id="@+id/rgParcial1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton

                    android:id="@+id/rbExelenteP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excelente" />

                <RadioButton

                    android:id="@+id/rbBuenoP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bueno" />

                <RadioButton

                    android:id="@+id/rbSuficienteP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suficiente" />

                <RadioButton

                    android:id="@+id/rbNoPresentadoP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Presentado" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvParcial2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcial 2" />

            <RadioGroup
                android:id="@+id/rgParcial2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton

                    android:id="@+id/rbExelenteP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excelente" />

                <RadioButton

                    android:id="@+id/rbBuenoP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bueno" />

                <RadioButton

                    android:id="@+id/rbSuficienteP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suficiente" />

                <RadioButton

                    android:id="@+id/rbNoPresentadoP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Presentado" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvParcial3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcial 3" />


            <RadioGroup
                android:id="@+id/rgParcial3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton

                    android:id="@+id/rbExelenteP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excelente" />

                <RadioButton

                    android:id="@+id/rbBuenoP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bueno" />

                <RadioButton

                    android:id="@+id/rbSuficienteP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suficiente" />

                <RadioButton

                    android:id="@+id/rbNoPresentadoP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Presentado" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvExtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extras"
                android:paddingTop="12dp"/>

            <CheckBox
                android:id="@+id/cbTareas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tareas completas" />

            <CheckBox
                android:id="@+id/cbParticipacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ParticipaciÃ³n" />

            <CheckBox
                android:id="@+id/cbProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proyecto corto" />

            <CheckBox
                android:id="@+id/cbAsistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistencia alta" />

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Resultado:" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
